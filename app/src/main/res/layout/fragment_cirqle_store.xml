<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CirqleStore.CirqleStoreFragment"
    android:background="@color/white"
    android:orientation="vertical"
    >

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="40sp"
            android:gravity="center"
            android:text="Coming Soon..."
            android:textColor="@color/txt_gray"
            android:background="@color/white"/>
        <TextView
            android:textColor="@color/txt_gray"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Exciting news! We're working on launching our very own store section within the app. Soon, you'll be able to find all your college and hostel essentials right here, with the added convenience of quick delivery within 1 hour!"
            android:textSize="20sp"
            android:padding="8dp"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/primary_secondary"
            android:text="Stay tuned for updates on our launch date and exclusive deals for our community members."
            android:textSize="20sp"
            android:padding="8dp"
            android:textStyle="bold"
            />
        <TextView
            android:textColor="@color/txt_gray"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="In the meantime, we'd love to hear from you. Are you excited about the upcoming store section? What products would you like to see available? Let us know by filling out the form below:"
            android:textSize="20sp"
            android:padding="8dp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/gform_link"
            android:padding="8dp"
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Link to Google Form"
            android:gravity="center"
            android:textSize="30sp"
            android:textColor="@color/primary_secondary"
            android:background="@drawable/et_rounded_corner_background"
            android:stateListAnimator="@drawable/textview_btn_selector"/>
        <TextView
            android:textColor="@color/txt_gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your feedback is invaluable to us as we strive to make your college experience even better. Thank you for being a part of our community!"
            android:textSize="20sp"
            android:padding="8dp"
            android:textStyle="bold"
            />

    </LinearLayout>
</ScrollView>


</LinearLayout>