<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background color or shape -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/white" /> <!-- Change to your desired background color -->
            <corners android:radius="4dp" /> <!-- Optional: Add corner radius -->
        </shape>
    </item>
    <!-- Dropdown arrow icon -->
    <item android:right="8dp" android:gravity="end|center_vertical">
        <bitmap
            android:src="@drawable/baseline_arrow_drop_down_24"
        android:gravity="center_vertical|right" />
    </item>
</layer-list>
